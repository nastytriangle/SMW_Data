<Window x:Name="Window1" x:Class="SMW_Data.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMW_Data"
        mc:Ignorable="d"
        Title="SMW Data" Height="600" Width="800" FontSize="24">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid x:Name="GridMenu">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <!--Header Menu-->
            <Menu>
                <MenuItem Header="File" FontSize="16">
                    <MenuItem Header="Settings" Click="MenuItem_Click_Settings">
                    </MenuItem>
                    <MenuItem Header="Exit" Click="MenuItem_Click_Exit">
                    </MenuItem>
                </MenuItem>
            </Menu>
        </Grid>
        <!--Main Window-->
        <Grid x:Name="GridMain" Grid.Row="1" Background="#FF2A2A2A">
            <!--Level Data-->
            <Label x:Name="Label_LevelDeathCount" Content="Level&#xD;&#xA;Death&#xD;&#xA;Count" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24" Height="100" Width="86" HorizontalContentAlignment="Center" Foreground="White"/>
            <Image x:Name="Image_MarioDeath1" HorizontalAlignment="Left" Height="100" Margin="96,10,0,0" VerticalAlignment="Top" Width="100" Source="/deathmario.png" />
            <TextBlock x:Name="TextBlock_LevelDeathCount" HorizontalAlignment="Left" Margin="201,-7,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="125" Width="355" FontSize="100" FontWeight="Bold" Foreground="White"/>
            <TextBox x:Name="TextBox_AddLevelDeaths" HorizontalAlignment="Left" Margin="555,31,0,0" Text="0" VerticalAlignment="Top" Width="70" FontSize="14" Height="23" TextAlignment="Center" MaxLines="1" MaxLength="6" PreviewTextInput="TextBox_AddLevelDeaths_PreviewTextInput"/>
            <Button x:Name="Button_AddLevelDeaths" Content="Add Level Deaths" HorizontalAlignment="Left" Margin="630,31,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Click="Button_AddLevelDeaths_Click" Width="138"/>
            <Button x:Name="Button_ResetLevel" Content="Reset Level Count" HorizontalAlignment="Left" Margin="630,60,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Click="Button_ResetLevel_Click" Width="138"/>
            <Button x:Name="ButtonLevelPlus" Content="+" HorizontalAlignment="Left" Margin="594,60,0,0" VerticalAlignment="Top" Height="23" Width="23" FontSize="12" FontWeight="Bold" Click="ButtonLevelPlus_Click"/>
            <Button x:Name="ButtonLevelMinus" Content="-" HorizontalAlignment="Left" Margin="563,60,0,0" VerticalAlignment="Top" Height="23" Width="23" FontWeight="Bold" FontSize="12" Click="ButtonLevelMinus_Click"/>
            <!--Total Data-->
            <Label x:Name="Label_TotalDeathCount" Content="Total&#xA;Death&#xA;Count" HorizontalAlignment="Left" Margin="10,149,0,0" VerticalAlignment="Top" FontSize="24" Height="100" Width="86" HorizontalContentAlignment="Center" Foreground="White"/>
            <Image x:Name="Image_MarioDeath2" HorizontalAlignment="Left" Height="100" Margin="96,149,0,0" VerticalAlignment="Top" Width="100" Source="/deathmario.png"/>
            <TextBlock x:Name="TextBlock_TotalDeathCount" HorizontalAlignment="Left" Margin="201,132,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="125" Width="355" FontSize="100" FontWeight="Bold" Foreground="White"/>
            <TextBox x:Name="TextBox_AddTotalDeaths" HorizontalAlignment="Left" Margin="555,167,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70" FontSize="14" Height="22" TextAlignment="Center" MaxLines="1" MaxLength="6" PreviewTextInput="TextBox_AddTotalDeaths_PreviewTextInput"/>
            <Button x:Name="Button_AddTotalDeaths" Content="Add Total Deaths" HorizontalAlignment="Left" Margin="630,167,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Click="Button_AddTotalDeaths_Click" Width="138"/>
            <Button x:Name="Button_ResetTotal" Content="Reset Total Count" HorizontalAlignment="Left" Margin="630,199,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Click="Button_ResetTotal_Click" Width="138"/>
            <Button x:Name="ButtonTotalPlus" Content="+" HorizontalAlignment="Left" Margin="594,199,0,0" VerticalAlignment="Top" Height="23" Width="23" FontSize="12" FontWeight="Bold" Click="ButtonTotalPlus_Click"/>
            <Button x:Name="ButtonTotalMinus" Content="-" HorizontalAlignment="Left" Margin="563,199,0,0" VerticalAlignment="Top" Height="23" Width="23" FontWeight="Bold" FontSize="12" Click="ButtonTotalMinus_Click"/>
            <!--Level Count Data-->
            <Label x:Name="Label_HackName" Content="Hack&#xA;Name" HorizontalAlignment="Left" Margin="10,269,0,0" VerticalAlignment="Top" FontSize="24" Height="81" Width="86" HorizontalContentAlignment="Center" Foreground="White"/>
            <TextBox x:Name="TextBox_HackName" HorizontalAlignment="Left" Margin="101,289,0,0" Text="[Enter Hack Name Here]" VerticalAlignment="Top" Width="520" FontSize="24" Height="39" MaxLines="1" Grid.Row="1"/>
            <Label x:Name="Label_LevelCount" Content="Level&#xA;Count" HorizontalAlignment="Left" Margin="10,355,0,0" VerticalAlignment="Top" FontSize="24" Height="81" Width="86" HorizontalContentAlignment="Center" Foreground="White"/>
            <TextBlock x:Name="TextBlock_LevelCountCurrent" HorizontalAlignment="Left" Margin="110,321,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="136" Width="129" FontSize="100" FontWeight="Bold" Foreground="White" TextAlignment="Right"/>
            <TextBlock x:Name="TextBlock_LevelCountSlash" HorizontalAlignment="Left" Margin="239,315,0,0" TextWrapping="Wrap" Text="/" VerticalAlignment="Top" Height="136" Width="62" FontSize="100" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
            <TextBlock x:Name="TextBlock_LevelCountTotal" HorizontalAlignment="Left" Margin="299,321,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="136" Width="491" FontSize="100" FontWeight="Bold" Foreground="White"/>
            <Button x:Name="Button_GetExitCount" Content="Get Exit Count" HorizontalAlignment="Left" Margin="630,297,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Click="Button_GetExitCount_Click" Width="138"/>
        </Grid>
    </Grid>
</Window>